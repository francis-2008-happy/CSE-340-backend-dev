<%# views/inventory/add-classification.ejs %>

<h1>Add New Classification</h1>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="addClassificationForm" action="/inv/add-classification" method="post">
  <fieldset>
    <label for="classification_name">Classification Name:</label>
    <input type="text" name="classification_name" id="classification_name" required pattern="^[a-zA-Z]+$">
    <span>Name must be alphabetic characters only.</span>
    <button type="submit">Add Classification</button>
  </fieldset>
</form>