<%# Content for the management view %>
<h1><%- title %></h1>

<% if (locals.messages && Object.keys(locals.messages).length) { %>
  <ul class="notice">
    <% Object.keys(locals.messages).forEach(type => { %>
      <% locals.messages[type].forEach(message => { %>
        <li class="<%= type %>"><%- message %></li>
      <% }) %>
    <% }) %>
  </ul>
<% } %>

<div class="management-container">
    <div class="management-links">
        <a href="/inv/add-classification">Add New Classification</a>
        <a href="/inv/add-inventory">Add New Inventory</a>
    </div>

    <hr>

    <h2 class="manage">Manage Inventory</h2>
    <p class="choose">Choose a classification from the list to see the items.</p>
    
    <%- classificationList %>

    <table id="inventoryDisplay"></table>
</div>

<script src="/js/inventory.js"></script>