<% /* views/account/login.ejs */ %>

<% /* Set the title dynamicallly from controller data */ %>
<% title = title || "Login" %> <% /* Default title if not provided */ %>
<%- contentFor('body') %>

<div class="container mx-auto p-4 md:p-8">
    <h1 class="text-3xl font-bold mb-6 text-center"><%= title %></h1>

    <% /* Flash message display */ %>
    <% if (messages && messages.length > 0) { %>
        <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-6 rounded-md shadow-sm" role="alert">
            <% messages.forEach(function(message){ %>
                <p><%= message %></p>
            <% }) %>
        </div>
    <% } %>

    <div class="main-form">
        <form action="/account/login" method="POST" class="space-y-6">
            <figure>
                <legend> </legend>
                <div class="form-group">
                    <label for="accountEmail" class="block text-gray-700 text-sm font-bold mb-2">Email Address</label>
                    <br>
                    <input type="email" id="accountEmail" name="account_email" required
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Enter your email"
                       value="<%= locals.account_email ? locals.account_email : '' %>">
                </div>

                <div class="form-group">
                    <label for="accountPassword" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                    <br>
                    <input type="password" id="accountPassword" name="account_password" required
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="Enter your password">
                </div>

                <button type="submit"
                    class="login-buttton">
                    Login
                </button>
             </figure>
        </form>
       

        <div class="mt-6 text-center">
            <p class="text-gray-600">No account yet? <a href="/account/register" class="text-blue-500 hover:text-blue-700 font-bold underline">Sign-up here</a></p>
        </div>
        
    </div>
</div>