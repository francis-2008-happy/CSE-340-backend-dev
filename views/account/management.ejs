<div class="page-container">
  <h1 class="page-title"><%= title %></h1>

  <% if (messages.notice) { %><div class="notice"><p><%= messages.notice %></p></div><% } else if (messages.error) { %><div class="notice error"><p><%= messages.error %></p></div><% } %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <%  }) %>
    </ul>
  <% } %>

  <div class="form-card">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    <a href="/account/update/<%= locals.accountData.account_id %>" class="btn btn-primary">Update Account Information</a>
  </div>

  <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <div class="form-card">
      <h3>Inventory Management</h3>
      <p>Use the link below to manage the inventory.</p>
      <a href="/inv/" class="btn btn-primary">Manage Inventory</a>
    </div>
  <% } %>
</div>